<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/homescreen" >

    
    

       <ImageView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/title"/>

       <Button
           android:id="@+id/timer"
           style="@style/DashboardButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="87dp"
           android:drawableLeft="@drawable/timer"
           android:drawableStart="@drawable/timer" />

       <Button
           android:id="@+id/motions"
           style="@style/DashboardButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="74dp"
           android:drawableLeft="@drawable/motions"
           android:drawableStart="@drawable/motions" />
       
</LinearLayout>