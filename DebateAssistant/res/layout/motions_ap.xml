<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="@drawable/homescreen"
    android:orientation="vertical" >

<RelativeLayout 
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/homescreen" >
	
     <TextView
           android:id="@+id/mot1"
           style="@style/DashboardButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20sp"
           android:textSize="40dp"
           android:text="Motion 1" />

     <TextView
         android:id="@+id/mot3"
         style="@style/DashboardButton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/mot2"
         android:layout_marginTop="91dp"
         android:text="Motion 3"
         android:textSize="40dp" />

     <TextView
         android:id="@+id/mot2"
         style="@style/DashboardButton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/mot1"
         android:layout_marginTop="81dp"
         android:text="Motion 2"
         android:textSize="40dp" />

     <TextView
         android:id="@+id/motion1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/mot1"
         android:layout_marginTop="16dp" />

     <TextView
         android:id="@+id/motion2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/mot2"
         android:layout_marginTop="22dp" />

     <TextView
         android:id="@+id/motion3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/mot3"
         android:layout_marginTop="34dp" />
	
    </RelativeLayout>
    </ScrollView>